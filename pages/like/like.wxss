/* pages/like/like.wxss */
.head{
  width: 100%;
  height: 30px;
  display: flex;
}
.head-left{
  width: 150px;
  height: 30px;
  display: flex;
}
.head-leftImg{
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-top: 5px;
}
.head-leftFont{
  font-size: 15px;
  margin-top:5px;
  margin-left: 5px; 
}
.head-delete{
  width: 55px;
  height: 30px;
  position: absolute;
  right: 5px;
  display: flex;
}
.head-deleteImg{
  width: 15px;
  height: 15px;
  margin:auto;
}
.head-deleteFont{
  font-size: 15px;
  color: rgb(202, 202, 202);
  margin:auto;
}
.collection{
  width: 100%;
  height: 240px;
  position:relative;
  top: 5px; 
  box-shadow: 2rpx 2rpx 5rpx gainsboro;
}
.collectionImg{
  width: 95%;
  height: 170px;
  margin: auto;
  margin-top: 10px;
  margin-left: 2.5%;
  background-color: pink;
}
.collectionHot{
  width: 80px;
  height: 30px;
  position: absolute;
  top: 130px;
  left: 220px;
  display: flex;
  background-color: black;
  opacity: 0.5;
  border-radius: 5px;
}
.hotImg{
  width: 15px;
  height: 18px;
  margin: auto;
}
.hotNum{
  width: 50px;
  font: 15px;
  margin: auto;
  color: white;
}
.collectionInfor{
width: 95%;
height: 50px;
margin: auto;
}
.inforName{
width: 200px;
height: 25px;
font-size: 20px;
font-weight: bold;
}
.inforPrice{
  width: 200px;
  height: 20px;
  font-size: 15px;
  color: rgba(248, 8, 8, 0.548);
}
.inforBox{
  width: 60px;
  height: 50px;
  position: absolute;
  top: 185px;
  left: 250px;
}
.inforImg{
  width: 30px;
  height: 25px;
  margin-left: 15px;
}
.inforFont{
  width: 60px;
  height: 25px;
  font-size: 15px;
  color: gray;
}
.nomore{
  width: 100%;
  height: 300px;
  display: flex;
}
.nomoreImg{
  width: 200px;
  height: 150px;
  margin: auto;
}